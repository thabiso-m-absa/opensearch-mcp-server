# Environment variables for OpenSearch MCP Server
# Copy this file to .env and configure your values

# OpenSearch Connection
OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# SSL/TLS Configuration
OPENSEARCH_REJECT_UNAUTHORIZED=false
# OPENSEARCH_CA_CERT_PATH=/path/to/ca-cert.pem
# OPENSEARCH_CA_BUNDLE=-----BEGIN CERTIFICATE-----...

# Connection Settings
OPENSEARCH_REQUEST_TIMEOUT=30000
OPENSEARCH_PING_TIMEOUT=3000
OPENSEARCH_MAX_RETRIES=3

# Index Configuration
OPENSEARCH_DEFAULT_INDEX=logs-*
# OPENSEARCH_INDEX_PREFIX=myapp-

# AWS OpenSearch Service (if using AWS)
# AWS_REGION=us-east-1
# AWS_SERVICE=es

# Alternative: API Key Authentication
# OPENSEARCH_API_KEY=your-api-key-here